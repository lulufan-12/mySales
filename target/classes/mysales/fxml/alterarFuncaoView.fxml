<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import mysales.controls.TextFieldDouble?>
<?import mysales.controls.TextFieldInteger?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" vgap="10" hgap="10"
          prefWidth="600" prefHeight="400"
          fx:controller="mysales.controllers.AlterarFuncaoController">

    <Label text="Nome" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="txf_nome" promptText="Nome da Função" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3" />
    <Label text="Descrição" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextArea fx:id="txa_descricao" promptText="Descrição da Função" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="4"  />
    <Label text="Salário"  GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextFieldDouble fx:id="txf_salario" promptText="Salário" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Carga Horária"  GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <TextFieldInteger fx:id="txf_carga_horaria" promptText="Carga Horária" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    <Button fx:id="btn_cadastrar" text="Alterar Função"  GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.halignment="RIGHT" />

</GridPane>